#############################################
# SantriOnline Environment Example
#############################################
# Cloudflare Credentials (JANGAN commit nilai asli)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
DATABASE_ID=

# Remix App Runtime
SESSION_SECRET=change-me-32chars-min
APP_ENV=local
LOG_LEVEL=info
LOG_SQL=0
LOG_DEBUG_SAMPLE=0.1

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Firebase Authentication (opsional, gunakan jika lebih nyaman)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_APP_ID=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_MEASUREMENT_ID=
FIREBASE_STORAGE_BUCKET=

# Feature Flags
FEATURE_EXPERIMENTAL=0

# Analytics / Sentry (optional)
SENTRY_DSN=

# Build metadata (optional override)
APP_VERSION=
COMMIT_SHA=

# Notes:
# 1. Salin file ini menjadi .env lalu isi sesuai environment.
# 2. Jangan pernah commit .env berisi nilai sensitif.
# 3. Pastikan token Cloudflare punya scope minimal (Workers + D1 read/write + KV jika dipakai).
