// Prisma schema for SantriOnline Next.js app (Cloudflare D1 compatible)
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  SANTRI
  USTADZ
  ADMIN
}

enum PaymentStatus {
  LUNAS
  BELUM
  TERLAMBAT
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String?  @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  role           Role     @default(SANTRI)
  members        Member[]
  payments       Payment[]
  hafalan        HafalanSession[]
  accounts       Account[]
  sessions       Session[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Member {
  id         String   @id @default(cuid())
  name       String
  phone      String?
  address    String?
  role       Role     @default(SANTRI)
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  payments   Payment[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Payment {
  id         String         @id @default(cuid())
  month      Int
  year       Int
  amount     Int
  status     PaymentStatus  @default(BELUM)
  member     Member         @relation(fields: [memberId], references: [id])
  memberId   String
  recordedBy User?          @relation(fields: [recordedById], references: [id])
  recordedById String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

model Surah {
  id        Int     @id
  name      String
  arabic    String
  ayahCount Int
  order     Int
  sessions  HafalanSession[]
}

model HafalanSession {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  surah        Surah    @relation(fields: [surahId], references: [id])
  surahId      Int
  startAyah    Int
  endAyah      Int
  status       String   @default("PENDING")
  note         String?
  reviewedBy   User?    @relation("Reviewer", fields: [reviewedById], references: [id])
  reviewedById String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
